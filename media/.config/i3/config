workspace $workspace1 output $monitor
workspace $workspace2 output $monitor
workspace $workspace3 output $monitor
workspace $workspace4 output $monitor
workspace $workspace5 output $monitor
workspace $workspace6 output $monitor
workspace $workspace7 output $monitor
workspace $workspace8 output $monitor
workspace $workspace9 output $monitor
workspace $workspace0 output $monitor



